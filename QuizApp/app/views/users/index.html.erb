<!-- Masthead -->
<header class="masthead text-white text-center">
  <div class="overlay"></div>
  <div class="container">
    <div class="row mx-auto pl-5 ">
      <div class="col-xl-9 mx-auto">
        <h1 class="mb-5">Quiz app leaderboard</h1>
        <table id="mytable" class="table">
        	<thead>
        	  <tr>
          		<th>Username</th>
              <th>Score</th>
          		<th style="width:25%">Progress</th>
        	  </tr>
        	</thead>
        	<tbody>
            <% for user in @users %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.lvl_score %></td>
              <td>
                <div class="progress">
                  <div style="width: <%= user.progress %>%;" aria-valuemax="100" aria-valuemin="0" aria-valuenow="<%= user.progress %>" role="progressbar" class="red progress-bar">
                  <span style="color: black; padding-left: 5px;"><%= user.progress %>%</span>
                   </div>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</header>

