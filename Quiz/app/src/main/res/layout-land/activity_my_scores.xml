<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/film"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/filmProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="3"
                    android:progressDrawable="@drawable/progress_bar_color_movies"/>

                <TextView
                    android:id="@+id/moviesProgressBarText"
                    android:layout_alignLeft="@id/filmProgressBar"
                    android:layout_alignTop="@id/filmProgressBar"
                    android:layout_alignRight="@id/filmProgressBar"
                    android:layout_alignBottom="@id/filmProgressBar"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="#00000000"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_alignEnd="@id/filmProgressBar"
                    android:layout_alignStart="@id/filmProgressBar"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sport"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/sportProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="3"
                    android:progressDrawable="@drawable/progress_bar_color_sport"/>

                <TextView
                    android:id="@+id/sportProgressBarText"
                    android:layout_alignLeft="@id/sportProgressBar"
                    android:layout_alignTop="@id/sportProgressBar"
                    android:layout_alignRight="@id/sportProgressBar"
                    android:layout_alignBottom="@id/sportProgressBar"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="#00000000"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_alignEnd="@id/sportProgressBar"
                    android:layout_alignStart="@id/sportProgressBar"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </RelativeLayout>

        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/science"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/scienceProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="3"
                    android:progressDrawable="@drawable/progress_bar_color_science"/>

                <TextView
                    android:id="@+id/scienceProgressBarText"
                    android:layout_alignLeft="@id/scienceProgressBar"
                    android:layout_alignTop="@id/scienceProgressBar"
                    android:layout_alignRight="@id/scienceProgressBar"
                    android:layout_alignBottom="@id/scienceProgressBar"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="#00000000"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_alignStart="@id/scienceProgressBar"
                    android:layout_alignEnd="@id/scienceProgressBar"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/geography"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/geographyProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="3"
                    android:progressDrawable="@drawable/progress_bar_color_geography"/>

                <TextView
                    android:id="@+id/geographyProgressBarText"
                    android:layout_alignLeft="@id/geographyProgressBar"
                    android:layout_alignTop="@id/geographyProgressBar"
                    android:layout_alignRight="@id/geographyProgressBar"
                    android:layout_alignBottom="@id/geographyProgressBar"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="#00000000"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_alignStart="@id/geographyProgressBar"
                    android:layout_alignEnd="@id/geographyProgressBar"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </RelativeLayout>

        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/historyAndArt"
                android:textStyle="bold"
                android:textSize="20sp"
/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/historyAndArtProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="3"
                    android:progressDrawable="@drawable/progress_bar_color_history"/>

                <TextView
                    android:id="@+id/historyAndArtProgressBarText"
                    android:layout_alignLeft="@id/historyAndArtProgressBar"
                    android:layout_alignTop="@id/historyAndArtProgressBar"
                    android:layout_alignRight="@id/historyAndArtProgressBar"
                    android:layout_alignBottom="@id/historyAndArtProgressBar"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_alignEnd="@id/historyAndArtProgressBar"
                    android:layout_alignStart="@id/historyAndArtProgressBar"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
            </RelativeLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </TableRow>
</TableLayout>