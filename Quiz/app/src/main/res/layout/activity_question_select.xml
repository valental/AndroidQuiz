<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/questionProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:max="10000"
        android:progress="3000"
        android:progressDrawable="@drawable/progress_bar_color_time"
        android:scaleY="2" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TableRow>
            <Button
                android:id="@+id/answerA"
                android:layout_height="50dp"
                android:layout_marginBottom="6dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/button_style_a"
                android:enabled="false"
                android:text="A"
                />
            <Button
                android:id="@+id/answerBtn1"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/button_style1"
                android:textColor="#0000AA"
                android:layout_marginBottom="6dp"
                android:onClick="answerOnClick"
                android:text="Button1"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/answerB"
                android:layout_height="50dp"
                android:layout_marginBottom="6dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/button_style_b"
                android:enabled="false"
                android:text="B"
                />
            <Button
                android:id="@+id/answerBtn2"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:textColor="#6A0888"
                android:layout_marginBottom="6dp"
                android:onClick="answerOnClick"
                android:text="Button2"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/answerC"
                android:layout_height="50dp"
                android:layout_marginBottom="6dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/button_style_c"
                android:enabled="false"
                android:text="C"
                />
            <Button
                android:id="@+id/answerBtn3"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/button_style3"
                android:textColor="#AA0000"
                android:layout_marginBottom="6dp"
                android:onClick="answerOnClick"
                android:text="Button3"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/answerD"
                android:layout_height="50dp"
                android:layout_marginBottom="6dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/button_style_d"
                android:enabled="false"
                android:text="D"
                />
            <Button
                android:id="@+id/answerBtn4"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/button_style4"
                android:textColor="#AAAA00"
                android:layout_marginBottom="6dp"
                android:onClick="answerOnClick"
                android:text="Button4"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
